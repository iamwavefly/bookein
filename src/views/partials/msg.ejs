<% if(locals.errors){ %> <% errors.forEach(function(error) { %>
<div class="alert alert-warning">
  <%= error.msg %>
</div>
<% }); %> <% } %> <% if(success_msg != ''){ %>
<div class="alert alert-success">
  <%= success_msg %>
</div>
<% } %> <% if(error_msg != ''){ %>
<div class="alert alert-danger">
  <%= error_msg %>
</div>
<% } %> <% if(error != ''){ %>
<div class="alert alert-danger">
  <%= error %>
</div>
<% } %>